<%= form_for @playlist, url: pick_pl_form_url(@playlist)  do |f| %>

<% if @playlist.errors.any? %>
    <div id="error-explanation">
        <h2>There were some errors:</h2>
            <div class="container">
                <% @album.errors.full_messages.each do |msg| %>
                    <div><%= msg %></div>
                    <br>
                 <% end %>
            </div>
    </div>
<% end %>
    
    <div id="field<%= ' field_with_errors' if @playlist.errors[:name].any? %>">
        <%= f.label :name, "Playlist Name" %>
        <%= f.text_field :name %>
    </div>

    <br />
    
    <%= f.submit %>

<% end %>