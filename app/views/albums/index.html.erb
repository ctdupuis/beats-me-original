<h3>Filter albums by genre:</h3>
  <%= form_tag("/albums", method: "get") do %>
    <%= select_tag "genre", options_from_collection_for_select(Genre.all, :id, :name), prompt: "No Filter" %>

    <div class="actions">
        <%= submit_tag "Filter" %>
    </div>
  <% end %>

  
<% @albums.each do |album| %>
    <div class="list-item">
        <h3><%= link_to album.name, album_path(album) %> 
        <% if current_user && check_ownership(current_user, album) %>
        | <%= link_to "Edit", edit_album_path(album) %></h3> 
        <% end %>
    </div>
<% end %>