<h3>Filter albums:</h3>
  <%= form_tag("/albums", method: "get") do %>
    <%= select_tag "genre", options_from_collection_for_select(Genre.all, :id, :name), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
<% @albums.each do |album| %>
    <div class="list-item">
        <h3><%= link_to album.name, album_path(album) %> 
        <% if current_user && check_ownership(album) %>
        | <%= link_to "Edit", edit_album_path(album) %></h3> 
        <% end %>
    </div>
<% end %>