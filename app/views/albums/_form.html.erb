<%= form_for @album do |f| %>
    
    <%= f.label :name, "Album Name" %>
    <%= f.text_field :name %>

    <br />

    <%= f.label :artist, "Artist's Name" %>
    <%= f.text_field :artist_name %>

    <br />
    Genre:
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>

    <br />

    <%= new_or_edit?(f, @album) %>

    <br />

    <%= f.submit %>
<% end %>