
<%= form_for @album do |f| %>
    
    <%= f.label :name, "Album Name" %>
    <%= f.text_field :name %>

    <br />

    <%= f.label :artist, "Artist's Name" %>
    <%= f.text_field :artist_name %>

    <br />
    Genre:
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>

    <br />

    <h2>Tracklist</h2>

    <%= f.fields_for :songs, 6.times {@album.songs.build} do |song_field| %>
        <%= song_field.label :title %>
        <%= song_field.text_field :title %>
        <%= song_field.label :length %>
        <%= song_field.text_field :length %>

        <br />

    <% end %>
    <br />

    <%= f.submit %>
<% end %>