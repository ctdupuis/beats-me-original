<div class="header">
    <div class="title"><h1><%= link_to "BeatsME", root_path%></h1></div>
        <div class="navbar">
            <% if user_is_authenticated %>
                <div class="nav-container" onclick="location.href='/my_page';" style="cursor: pointer;">
                    <div class="nav-item"><%= link_to "My Profile", user_path(current_user) %></p></div>
                </div>
                <div class="nav-container" onclick="location.href='/logout';">
                    <div class="nav-item"><%= link_to "Log Out", controller: 'sessions', action: 'destroy' %></p></div>
                </div>
            <% else %>
                <div class="nav-container" onclick="location.href='/signup';">
                    <div class="nav-item"><%= link_to "Sign Up", signup_path %></p></div>
                </div>
                <div class="nav-container" onclick="location.href='/login';">
                    <div class="nav-item"><%= link_to "Log In", login_path %></p></div>
                </div>
            <% end %>
        </div>
    </div>
</div>
